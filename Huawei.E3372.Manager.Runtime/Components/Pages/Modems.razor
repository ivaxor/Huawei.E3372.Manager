@page "/modems"
@rendermode InteractiveServer

<PageTitle>Modems</PageTitle>

<h1>Modems</h1>

<button class="btn btn-secondary" @onclick="() => Modal?.Open()">Discover new modem</button>



<ModalComponent @ref="Modal" Title="Discover new modem">
    <EditForm EditContext="EditContext" OnValidSubmit="OnSubmit">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="mb-3 row">
            <label for="uri" class="col-sm-2 col-form-label">Uri</label>
            <div class="col-sm-10">
                <InputText @bind-Value="Model.RawUri" id="uri" class="form-control" />
            </div>
        </div>

        <button type="submit" disabled="@IsSubmited" class="btn btn-primary">
            @if (IsSubmited)
            {
                <div class="spinner-grow spinner-grow-sm" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
                <span>Discovering</span>
            }
            else
            {
                <span>Discover</span>
            }
        </button>
    </EditForm>
</ModalComponent>